{
  "name": "ReforgedLauncher",
  "version": "1.0.0",
  "identifier": "me.dags.reforged",
  "icon": ".graphics/icon.png",
  "output": ".builds",
  "setup": [
    "rice embed-go"
  ],
  "targets": {
    "darwin/amd64": {
      "flags": ["-s -w"]
    },
    "linux/amd64": {
      "flags": ["-s -w"],
      "meta": {
        "categories": "Game"
      }
    },
    "windows/amd64": {
      "generate": ["goversioninfo -64"],
      "flags": ["-H=windowsgui -s -w"]
    }
  }
}